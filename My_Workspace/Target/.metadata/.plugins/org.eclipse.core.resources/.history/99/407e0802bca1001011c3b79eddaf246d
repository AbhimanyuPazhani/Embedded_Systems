#include<stdio.h>
#include<stdint.h>
void wait_for_input(void)
{
    printf("\nPress Enter to exit...");
    while (getchar() != '\n');  // clear input buffer
    getchar();                  // wait for Enter
}


int main ( )
{
	int32_t i, j, num;
	printf("Enter the height of the Pyramid:");
	scanf("%d", &num);

	for (i=1; i<=num; i++)
	{
		for(j=1;j<=i; j++)
		{
			printf("%4d ", j);


		}
		printf("\n");
	}
	wait_for_input();
}
